echo "ğŸ§ª Running tests before push..."

# Run tests and capture the output
npm run test:ci

# Get the exit code
TEST_EXIT_CODE=$?

# Check if tests passed OR if there are simply no tests (which is OK for now)
if [ $TEST_EXIT_CODE -eq 0 ]; then
  echo "âœ… Tests passed!"
elif [ $TEST_EXIT_CODE -eq 1 ]; then
  # Check if the failure was due to no tests found
  if npm run test:ci 2>&1 | grep -q "Executed 0 of 0 SUCCESS"; then
    echo "âš ï¸ No tests found, but allowing push to continue..."
    echo "ğŸ’¡ Consider adding tests for better code quality!"
  else
    echo "âŒ Tests failed! Push aborted."
    exit 1
  fi
else
  echo "âŒ Tests failed with unexpected error! Push aborted."
  exit 1
fi

echo "ğŸš€ Building production build..."

# Build the app
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Push aborted."
  exit 1
fi

echo "âœ… All checks passed! Proceeding with push..."